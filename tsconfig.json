{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "lib": [
            "esnext",
            "DOM"
        ],
        "strict": true,
        "outDir": "dist",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noEmit": true,
        "allowImportingTsExtensions": true
    },
    "ts-node": {
        "esm": true,
        "swc": true
    },
    "include": [
        "src/**/*",
        "utils/**/*",
        "__tests__/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
