{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "esnext"
        ],
        "strict": true,
        "outDir": "dist",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
    },
    "include": [
        "src",
        ".env.dev",
        ".env.prod",
        "jest.config.js",
        "__tests__/server.test.ts",
        "src/typeDefs/schema.graphql",
        "src/utils/environmentVariables.ts",
        "src/utils/typesgeneratorconfig.ts",
        "src/utils/databaseSeedTool.ts"
    ],
    "exclude": [
        "node_modules",
        "src/fakeData",
    ]
}
